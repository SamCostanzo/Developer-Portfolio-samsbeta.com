extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1 #{title}

        p.lead.text-light
          | #{description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each val in technologies
            li #{val}
          
          

        a.button.expanded(href=`${livelink}`, target="_blank") Live Demo
        a.button.expanded(href=`${githublink}`, target="_blank") GitHub Repo
    
      
      
      img.image(src=`${imageURLS[0]}`)
      img.image(src=`${imageURLS[1]}`)
      img.image(src=`${imageURLS[2]}`)


