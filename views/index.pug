extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Hi, i'm Sam. Let's code something.

      p.lead.text-light
        | Welcome to my portfolio site. Below you can find code projects that I have built and what technologies I used to create them.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

    
      each project in projects
        .cell
          a(href=`http://localhost:5000/project/${project.id}`)
            img.thumbnail(src= `${project.image_urls[0]}`)
            h5 #{project.project_name}
        

